package POO;

public class Livro {
	
	String name;
	String description;
	double price;
	Autor autor;
	
	void detalhes() {
		System.out.println("Detalhes do livro");
		System.out.println("Nome: " + name);
		System.out.println("Descrição: " + description);
		System.out.println("Preço: " + price);
		autor.detalhes();
		System.out.println("___");
		
		
	}
}
